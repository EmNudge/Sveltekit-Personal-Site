---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />

		<meta name="description" content="Personal website for EmNudge">
		<meta name="author" content="EmNudge">
		<meta name="keywords" content="EmNudge">
		<meta name="color-scheme" content="dark light">

		<link rel="alternate" type="application/rss+xml" href="/blog.xml" title="RSS feed for emnudge.dev">
		<link rel="icon" href="/icons/icon_neon.webp" />
		<link rel="stylesheet" href="/app.css">

		<title>{title}</title>
	</head>
	<body>
        <Header />
        <main>
		    <slot />
        </main>
        <Footer />
	</body>
</html>

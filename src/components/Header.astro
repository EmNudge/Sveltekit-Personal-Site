---
import Nav from './Nav.svelte';

const path = new URL(Astro.request.url).pathname.match(/^(.+?)(?:\/|$)/)[1];

const routes = [
    ["/", "Home"],
    ["/blog", "Blog"],
    ["/reads", "Bookmarks"],
];
---

<header>
    <a href="/" class="logo">
        <img src="/icons/logo.png" alt="logo" class="dark-mode" />
    </a>
    <Nav {routes} {path} />
</header>

<style>
    header {
        padding: 20px;
        max-width: 800px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: 1fr auto;
        align-items: center;
    }
    img {
        height: 40px;
    }
    .logo {
        display: flex;
        align-items: center;
    }
</style>

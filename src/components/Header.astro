---
import Nav from './Nav.svelte';

const path = new URL(Astro.request.url).pathname.match(/^(.+?)(?:\/|$)/)[1];

const routes: [string, string][] = [
    ["/", "Home"],
    ["/blog", "Blog"],
    ["/articles", "Bookmarks"],
];
---

<header>
    <a href="/" class="logo">
        <img src="/icons/logo_neon.png" alt="logo" />
    </a>
    <Nav {routes} {path} />
</header>

<style>
    header {
        padding: 20px;
        max-width: 800px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: 1fr auto;
        align-items: center;
    }
    img {
        height: 40px;
        filter: grayscale(.6);
        transition: 150ms;
    }
    img:hover {
        filter: grayscale(0);
    }
    .logo {
        display: flex;
        align-items: center;
    }
</style>
